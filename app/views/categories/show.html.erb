<div class="order-review">
  <div class="review-box">
    <div id="review-box-header"><h1> Review and Pay</h1></div>
    <div class="order-category-name">
     <% if @category.name != "Unlimited One Month Pass" %>
     <div id="order-category-name-short">
      <h3><%= @category.name %></h3>
    </div>
    <% else %>
    <div id="order-category-name-long">
      <h3><%= @category.name %></h3>
    </div>
    <% end %>
    <div id="order-category-validity">
      <% if @category.name != "Unlimited One Month Pass" %>
      <h3>The following pass would be valid for 30 days</h3>
      <% else %>
      <h3>The following pass would be valid for 60 days</h3>
      <% end %>
    </div>
    <div id="gym-name">
      <h2><%= @gym.name %></h3>
      </div>
      <div id="review-card-footer-line">
        <div id="order-total">
          <h2>Total:</h2>
          <h3><%=humanized_money_with_symbol(@category.price) %></h3>
          <div class="payment-button">
            <%= render 'shared/payment' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>

