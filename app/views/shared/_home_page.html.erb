<div class="wrapper-home">
  <div class="banner-home" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= image_path "woman-sport.jpg" %>');">
    <div class="banner-content">
      <h1>Easy Fit</h1>
      <p>Join the best gyms of Lisbon in just a few clicks</p>
      <%= link_to 'Discover Gyms', gyms_path, class: 'button-home' %>
      <%#= render 'shared/search_home' %>
    </div>
  </div>
  <div class="wrapper-value-proposition">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="value-proposition">
            <div class="value-proposition-title">
              <h2>Why Easy Fit?</h2>
            </div>
            <div class="value-proposition-list">
              <div class="value-proposition-card">
                <div class="value-proposition-top-section">
                  <div class="value-proposition-card-image">
                    <i class="fas fa-dollar-sign"></i>
                  </div>
                  <div class="value-proposition-card-title">
                    <h3>Great prices</h3>
                  </div>
                </div>
                <div class="value-proposition-bottom-section">
                  <p>Enjoy being healthy without breaking your pocket.</p>
                </div>
              </div>
              <div class="value-proposition-card">
                <div class="value-proposition-top-section">
                  <div class="value-proposition-card-image">
                    <i class="fas fa-check"></i>
                  </div>
                  <div class="value-proposition-card-title">
                    <h3>No Joining Fees</h3>
                  </div>
                </div>
                <div class="value-proposition-bottom-section">
                  <p>Choose between a 1-Time Pass, 10-Times Pass and the Unlimited Pass. No joining or cancellation fees.</p>
                </div>
              </div>
              <div class="value-proposition-card">
                <div class="value-proposition-top-section">
                 <div class="value-proposition-card-image">
                  <i class="fas fa-thumbs-up"></i>
                  <div class="value-proposition-card-title">
                    <h3>Cancel anytime</h3>
                  </div>
                </div>
                <div class="value-proposition-bottom-section">
                  <p>No cancellation fees, no hard feelings.</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'shared/footer' %>

