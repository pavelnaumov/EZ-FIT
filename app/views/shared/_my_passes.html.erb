<div class="container">
  <div class="card-container">
    <div class="row">
      <% @orders.each do |order| %>
        <div class="card card-product">
          <div class="card-image">
                <img alt="Image placeholder" src="<%= order.gym_photo %>" class="img-center img-fluid">
          </div>
          <div class="card-body text-center pt-0">
            <h6><%= order.gym_name %></h6>
            <p class="text-sm">
              <%= order.category_name %>
            </p>
            <p class="text-sm">
              Price paid: â‚¬<%= order.amount_cents/100 %>
            </p>
            <div class="product-colors mt-3">
              <a href="#" style="background-color: #59ad46;" data-toggle="tooltip" data-original-title="Swimming Pool"></a>
              <a href="#" style="background-color: #04050a;" data-toggle="tooltip" data-original-title="Weights"></a>
              <a href="#" style="background-color: #62aedd;" data-toggle="tooltip" data-original-title="Spa"></a>
              <a href="#" style="background-color: #e84385;" data-toggle="tooltip" data-original-title="Cross-Fit"></a>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Core JS - includes jquery, bootstrap, popper, in-view and sticky-kit -->
