<div class="main-content">
  <section class="min-vh-100 d-flex align-items-center">
    <div class="bg-img-holder top-0 right-0 col-lg-6 col-xl-8 zindex-100 d-none d-lg-block" data-bg-size="cover" data-bg-position="center">
      <%= image_tag "form-pic.jpg", class: 'svg-inject' %>
    </div>
    <div class="container-fluid">
      <div class="row align-items-center">
        <div class="col-sm-7 col-lg-6 col-xl-4 mx-auto ml-lg-0">
          <div class="px-4 px-lg-6">
            <div>
              <div class="mb-5 text-center">
                <h6 class="h3">Sign Up</h6>
                <p class="text-muted mb-0">Sign up to continue your experience</p>
              </div>
              <span class="clearfix"></span>
              <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <form role="form">
                  <div class="form-group">
                    <div class="form-inputs">
                      <%= f.input :first_name, required: true, autofocus: true, input_html: { class: 'detailStyling_user'}, label_html: { class: 'detailLabelStyling'} %>
                      <%= f.input :last_name, required: true, autofocus: true, input_html: { class: 'detailStyling_user'}, label_html: { class: 'detailLabelStyling'} %>
                      <%= f.input :email, required: true, autofocus: true, input_html: { class: 'detailStyling_user'}, label_html: { class: 'detailLabelStyling'} %>
                      <%= f.input :password, required: true, placeholder: '••••••', input_html: { class: 'detailStyling_user'}, label_html: { class: 'detailLabelStyling'},  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length)%>
                      <%= f.input :password_confirmation, required: true, placeholder: '•••••', input_html: { class: 'detailStyling_user'}, label_html: { class: 'detailLabelStyling'}  %>                    </div>
                  </div>
                  <div class="mt-4">
                    <%= f.button :submit, "Sign Up", class: 'btn btn-block btn-success'%>
                    <%= link_to "Log in", new_session_path(resource_name), class: 'btn btn-block btn-primary' %>
                    <%= link_to 'Back', :back, class: 'btn btn-block btn-secondary' %>
                    <%#= render "devise/shared/links" %>
                  </form>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
  <!-- Core JS - includes jquery, bootstrap, popper, in-view and sticky-kit -->
  <%= javascript_include_tag('purpose.core.js') %>
  <!-- Purpose JS -->
  <%= javascript_include_tag('purpose.js') %>
