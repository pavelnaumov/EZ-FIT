<div class="gym-wrapper">
  <div class="container">
    <h2 style="font-weight: bolder"; class = "text-center">Log in</h2>
    <div class="col-md-6 col-md-offset-3">
    <div class="form-details">

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs" style="color: black">
        <%= f.input :email, required: false, autofocus: true, input_html: { class: 'detailStyling_user'}, label_html: { class: 'detailLabelStyling'} %>
        <%= f.input :password, required: false, placeholder: '••••••', input_html: { class: 'detailStyling_user'}, label_html: { class: 'detailLabelStyling'} %>
        <%= f.input :remember_me, label: 'Remember Me', input_html: { class: 'detailStyling_boolean'}, label_html: { class: 'detailLabelStyling_boolean'}, as: :boolean if devise_mapping.rememberable?%>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
<!--         <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
 -->        <%= render "devise/shared/links" %>
      </div>
    <% end %>
    </div>
    </div>
  </div>
</div>

