<div class="main-content">
  <section class="min-vh-100 d-flex align-items-center">
    <div class="bg-img-holder top-0 right-0 col-lg-6 col-xl-8 zindex-100 d-none d-lg-block" data-bg-size="cover" data-bg-position="center">
      <%= image_tag "form-pic.jpg", class: 'svg-inject' %>
    </div>
    <div class="container-fluid">
      <div class="row align-items-center">
        <div class="col-sm-7 col-lg-6 col-xl-4 mx-auto ml-lg-0">
          <div class="px-4 px-lg-6">
            <div>
              <div class="mb-5 text-center">
                <h6 class="h3">Log In</h6>
                <p class="text-muted mb-0">Log in to continue your experience</p>
              </div>
              <span class="clearfix"></span>
              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <form role="form">
                  <div class="form-group">
                    <div class="form-inputs">
                      <%= f.input :email, required: false, autofocus: true %>
                      <%= f.input :password, required: false, placeholder: '••••••' %>
                      <%= f.input :remember_me, label: 'Remember Me', input_html: { class: 'detailStyling_boolean'}, label_html: { class: 'detailLabelStyling_boolean'}, as: :boolean if devise_mapping.rememberable?%>
                    </div>
                  </div>
                  <div class="mt-4">
                    <%= f.button :submit, "Enter", class: 'btn btn-block btn-success'%>
                    <%= link_to "Create a new account", new_user_registration_path, class: 'btn btn-block btn-primary'  %> 
                    <%= link_to 'Back', :back, class: 'btn btn-block btn-secondary' %>
                  </form>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
  <!-- Core JS - includes jquery, bootstrap, popper, in-view and sticky-kit -->
  <%= javascript_include_tag('purpose.core.js') %>
  <!-- Purpose JS -->
  <%= javascript_include_tag('purpose.js') %>
